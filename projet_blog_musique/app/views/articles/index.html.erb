<section>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<h1 class="title-article">List of articles :</h1>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<% @articles.each do |article| %>
					<p class="col-xs-12 col-sm-12 col-md-12 col-lg-12 contenant-articles">
						<a class="articles" href="/articles/<%= article.id %>"><%= article.title %></a>
					</p>
				<% end %>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<%= paginate @articles %>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 al-link">
				<a class="link-article" href="/">Home page</a>
			</div>
		</div>
	</div>
</section>
<%= javascript_include_tag "addheight.js" %>
